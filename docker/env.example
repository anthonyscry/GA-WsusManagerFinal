# Environment variables for WSUS Lab Environment
# Copy this file to .env in the project root and modify as needed

# SQL Server Configuration
SQL_SERVER_INSTANCE=wsus-sqlserver,1433
SQL_SERVER_SA_PASSWORD=WSUS_Admin123!
WSUS_DATABASE_NAME=SUSDB

# WSUS Server Configuration
WSUS_SERVER=localhost
WSUS_PORT=8530
WSUS_USE_SSL=false

# Application Configuration
NODE_ENV=development

# Network Configuration
WSUS_NETWORK_NAME=wsus-network

# Volume Paths (for Windows, adjust paths as needed)
SQL_DATA_PATH=./docker/volumes/sqlserver
WSUS_CONTENT_PATH=./docker/volumes/wsus/content
WSUS_DATABASE_PATH=./docker/volumes/wsus/database
